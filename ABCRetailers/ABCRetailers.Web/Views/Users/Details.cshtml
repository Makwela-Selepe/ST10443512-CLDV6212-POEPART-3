@model ABCRetailers.Web.Models.User
@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-circle"></i> User Details</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                @Model.Role
                            </span>
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Date Created:</dt>
                        <dd class="col-sm-8">@Model.DateCreated.ToString("f")</dd>

                        <dt class="col-sm-4">Last Login:</dt>
                        <dd class="col-sm-8">@(Model.LastLogin?.ToString("f") ?? "Never")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Additional Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Delivery Address:</dt>
                        <dd class="col-sm-8">@(Model.DeliveryAddress ?? "Not specified")</dd>

                        <dt class="col-sm-4">Cart Items:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@ViewBag.CartItemsCount items</span>
                        </dd>

                        <dt class="col-sm-4">User ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                    </dl>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit User
                        </a>

                        @if (Model.Username != User.Identity!.Name)
                        {
                            <form method="post" asp-action="ToggleStatus" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-@(Model.IsActive ? "outline-warning" : "outline-success") w-100">
                                    <i class="bi bi-@(Model.IsActive ? "person-dash" : "person-check")"></i>
                                    @(Model.IsActive ? "Deactivate User" : "Activate User")
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>