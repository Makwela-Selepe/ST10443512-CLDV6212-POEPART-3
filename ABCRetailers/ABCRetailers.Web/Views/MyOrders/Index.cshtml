@using ABCRetailers.Web.Models.ViewModels
@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<h2 class="mb-3"><i class="bi bi-receipt"></i> My Orders</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have not placed any orders yet.
    </div>

    <a class="btn btn-primary" href="/Shop">
        <i class="bi bi-bag"></i> Go to products
    </a>
}
else
{
    var grandTotal = Model.Sum(o => o.TotalAmount);

    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Product</th>
                <th class="text-end">Quantity</th>
                <th class="text-end">Total</th>
                <th>Status</th>
                <th>Created</th>
                <th>Shipped</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td class="text-muted">@o.Id</td>
                    <td>@o.ProductName</td>
                    <td class="text-end">@o.Quantity</td>
                    <td class="text-end">@o.TotalAmount.ToString("C")</td>
                    <td>@o.Status</td>
                    <td>@o.CreatedAt.ToLocalTime().ToString("g")</td>
                    <td>@(o.ShippedAt.HasValue? o.ShippedAt.Value.ToLocalTime().ToString("g") : "-")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="fw-bold">
                <td colspan="3" class="text-end">Grand total:</td>
                <td class="text-end">@grandTotal.ToString("C")</td>
                <td colspan="3"></td>
            </tr>
        </tfoot>
    </table>
}
