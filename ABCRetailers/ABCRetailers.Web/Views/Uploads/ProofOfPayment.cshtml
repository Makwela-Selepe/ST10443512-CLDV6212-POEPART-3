@model ABCRetailers.Web.Models.ViewModels.UploadProofOfPaymentViewModel

@{
    ViewData["Title"] = "Upload Proof of Payment";
}

<h2>Upload Proof of Payment</h2>

@if (Model?.UploadedOk == true)
{
    <div class="alert alert-success">
        File uploaded successfully!
        @if (!string.IsNullOrWhiteSpace(Model.BlobUri))  
        {
            <div>
                <a href="@Model.BlobUri" target="_blank">View uploaded file</a>
            </div>
        }
    </div>
}

<form asp-action="ProofOfPayment" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Choose File (PDF, Image, etc.)</label>
        <input asp-for="File" class="form-control" type="file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-upload"></i> Upload Proof
    </button>
</form>
