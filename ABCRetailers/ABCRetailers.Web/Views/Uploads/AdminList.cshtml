@using ABCRetailers.Web.Models.ViewModels
@model IEnumerable<PaymentProofViewModel>

@{
    ViewData["Title"] = "Payment proofs";
}

<h2>Payment proofs</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No payment proofs uploaded yet.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Customer</th>
                <th>File</th>
                <th>Uploaded at</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.CustomerName</td>
                    <td>@p.BlobName</td>
                    <td>@p.UploadedAt.ToLocalTime()</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="@p.BlobUri" target="_blank">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
