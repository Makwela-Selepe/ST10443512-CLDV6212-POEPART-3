@model ABCRetailers.Web.Models.ViewModels.CustomerDashboardViewModel
@{
    ViewData["Title"] = "My account";
}

<h2 class="mb-4">Welcome, @Model.CustomerName!</h2>

<div class="row g-4 mb-4">
    <!-- Cart items -->
    <div class="col-md-6 col-lg-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">Cart Items</h5>
                <h2>@Model.CartItems</h2>
                <a asp-controller="Cart" asp-action="Index" class="btn btn-light btn-sm mt-2">
                    View Cart
                </a>
            </div>
        </div>
    </div>

    <!-- Total orders -->
    <div class="col-md-6 col-lg-3">
        <div class="card text-white bg-secondary h-100">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <h2>@Model.TotalOrders</h2>
                <a asp-controller="MyOrders" asp-action="Index" class="btn btn-light btn-sm mt-2">
                    View Orders
                </a>
            </div>
        </div>
    </div>

    <!-- Pending -->
    <div class="col-md-6 col-lg-2">
        <div class="card text-dark bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title">Pending</h5>
                <h2>@Model.PendingOrders</h2>
                <a asp-controller="MyOrders" asp-action="Index"
                   asp-route-status="Pending"
                   class="btn btn-outline-dark btn-sm mt-2">
                    View Pending
                </a>
            </div>
        </div>
    </div>

    <!-- Shipped ✅ NEW -->
    <div class="col-md-6 col-lg-2">
        <div class="card text-dark bg-info h-100">
            <div class="card-body">
                <h5 class="card-title">Shipped</h5>
                <h2>@Model.ShippedOrders</h2>
                <a asp-controller="MyOrders" asp-action="Index"
                   asp-route-status="Shipped"
                   class="btn btn-outline-dark btn-sm mt-2">
                    View Shipped
                </a>
            </div>
        </div>
    </div>

    <!-- Delivered -->
    <div class="col-md-6 col-lg-2">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">Delivered</h5>
                <h2>@Model.DeliveredOrders</h2>
                <a asp-controller="MyOrders" asp-action="Index"
                   asp-route-status="Delivered"
                   class="btn btn-light btn-sm mt-2">
                    View Delivered
                </a>
            </div>
        </div>
    </div>
</div>


<!-- Quick Actions -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <!-- matches top "Products" tab -->
                    <a class="btn btn-outline-primary"
                       asp-controller="Shop" asp-action="Index">
                        <i class="bi bi-bag"></i> Shop Products
                    </a>

                    <!-- matches top "Cart" tab -->
                    <a class="btn btn-outline-success"
                       asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart"></i> View My Cart
                    </a>

                    <!-- matches top "My orders" tab -->
                    <a class="btn btn-outline-info"
                       asp-controller="MyOrders" asp-action="Index">
                        <i class="bi bi-receipt"></i> My Orders
                    </a>

                    <!-- matches top "Upload proof" tab -->
                    <a class="btn btn-outline-warning"
                       asp-controller="Uploads" asp-action="ProofOfPayment">
                        <i class="bi bi-upload"></i> Upload Payment Proof
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
