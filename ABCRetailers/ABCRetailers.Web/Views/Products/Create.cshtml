@using ABCRetailers.Web.Models.ViewModels
@model ProductViewModel
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Product</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ProductName" class="form-label">Product Name *</label>
                                <input asp-for="ProductName" class="form-control" required />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Price *</label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"
                                          placeholder="Enter product description..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StockAvailable" class="form-label">Stock Available *</label>
                                <input asp-for="StockAvailable" class="form-control" type="number" min="0" required />
                                <span asp-validation-for="StockAvailable" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Product Image</label>
                                <input type="file" name="image" class="form-control" accept="image/*" />
                                <div class="form-text">Optional. JPG, PNG, etc.</div>
                            </div>

                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a class="btn btn-secondary me-md-2" asp-action="Index">
                                        <i class="bi bi-arrow-left"></i> Back to List
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle"></i> Create Product
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
